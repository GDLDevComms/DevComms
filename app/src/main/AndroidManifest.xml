<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacpalberto.devcomms">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".DevCommsApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBq8HTm0Nw27-rGSHm_ZFxg1RhBWlXAuKE" />


        <activity
            android:name=".splash.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".events.MainActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".about.AboutActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".sponsors.SponsorsActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".eventDetail.EventDetailActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".sponsorDetail.SponsorDetailActivity"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".address.AddressActivity"
            android:theme="@style/AppThemeNoActionBar"
            android:screenOrientation="portrait"/>

        <service android:name=".notifications.DevCommsMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>