<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/eventCardColor"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.Guideline
            android:id="@+id/guidelineStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />

        <TextView
            android:id="@+id/eventTitle"
            style="@style/EventTitle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:textAppearance="@style/TitleTextStyle"
            app:layout_constraintEnd_toStartOf="@id/favoriteImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Firebase Realtime Database" />

        <ImageView
            android:id="@+id/favoriteImageView"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@color/eventTitleBackground"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_not_favorite"
            app:layout_constraintBottom_toBottomOf="@id/eventTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/eventTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/speakerImageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/speaker_photo"
            android:padding="8dp"
            android:src="@drawable/ic_default_speaker"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guidelineStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/eventTitle" />

        <TextView
            android:id="@+id/eventSpeaker"
            style="@style/EventData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RegularTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/eventTitle"
            tools:text="Speaker: Alberto Carrillo" />

        <TextView
            android:id="@+id/eventCommunity"
            style="@style/EventData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RegularTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/eventSpeaker"
            tools:text="Community: GDG Android" />

        <TextView
            android:id="@+id/eventRoom"
            style="@style/EventData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RegularTextStyle"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/eventCommunity"
            tools:text="Room: Room1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/eventType"
            style="@style/EventData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/RegularTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/eventRoom"
            tools:text="Workshop" />

        <TextView
            android:id="@+id/eventTime"
            style="@style/EventTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TimeTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guidelineStart"
            app:layout_constraintTop_toBottomOf="@id/eventType"
            tools:text="2:00 - 2:45" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>