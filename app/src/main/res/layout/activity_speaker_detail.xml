<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".speakerDetail.SpeakerDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColor"
        android:elevation="7dp"
        android:minHeight="?android:attr/actionBarSize"
        android:transitionName="toolbar"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/app_name"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <ImageView
                android:id="@+id/speakerImageView"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginTop="16dp"
                android:transitionName="speakerImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/speakerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/DetailTextStyle.SpeakerTitle"
                android:transitionName="speakerName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/speakerImageView"
                tools:text="Stephen D'Angels" />

            <ImageView
                android:id="@+id/flagImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_twitter"
                app:layout_constraintBottom_toBottomOf="@+id/twitterTextView"
                app:layout_constraintEnd_toEndOf="@id/guidelineStart"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/twitterTextView"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/countryTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textAppearance="@style/DetailTextStyle.Normal"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/speakerTitle"
                tools:text="Mexico" />

            <ImageView
                android:id="@+id/companyImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_flag"
                app:layout_constraintBottom_toBottomOf="@+id/countryTextView"
                app:layout_constraintEnd_toEndOf="@id/guidelineStart"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/countryTextView"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/twitterTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textAppearance="@style/DetailTextStyle.Hyperlink"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/countryTextView"
                tools:text="Twitter" />

            <ImageView
                android:id="@+id/githubImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_github"
                app:layout_constraintBottom_toBottomOf="@+id/githubTextView"
                app:layout_constraintEnd_toEndOf="@id/guidelineStart"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/githubTextView"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/githubTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textAppearance="@style/DetailTextStyle.Hyperlink"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@+id/twitterTextView"
                tools:text="github.com/stephenAngels" />

            <ImageView
                android:id="@+id/descriptionImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_document"
                app:layout_constraintBottom_toBottomOf="@id/speakerDescriptionTextView"
                app:layout_constraintEnd_toEndOf="@id/guidelineStart"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/speakerDescriptionTextView"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/speakerDescriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:textAppearance="@style/DetailTextStyle.Normal"
                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                app:layout_constraintStart_toEndOf="@id/guidelineStart"
                app:layout_constraintTop_toBottomOf="@id/githubTextView"
                tools:text="Android Tech Lead @SeatGeek, previously Android Engineer ESPN. Computer Engineering. Wisconsin native,  Android Tech Lead @SeatGeek, previously Android Engineer ESPN. Computer Engineering. Wisconsin native" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/companyGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="companyImageView,twitterTextView"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/githubGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="githubImageView,githubTextView"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/descriptionGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="descriptionImageView,speakerDescriptionTextView"
                tools:visibility="visible" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>