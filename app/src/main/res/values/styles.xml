<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTabLayoutTheme" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--EventCardView styles-->

    <style name="EventTitle">
        <item name="android:background">@color/eventTitleBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EventData">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="EventTime">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/eventTitleBackground</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!--EventTextAppearances-->

    <style name="RegularTextStyle">
        <item name="android:textColor">@color/eventSpeakerColor</item>
        <item name="android:textSize">@dimen/event_data_fontsize</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textColor">@color/eventTimeColor</item>
        <item name="android:textSize">@dimen/event_time_fontsize</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/eventTitleColor</item>
        <item name="android:textSize">@dimen/event_title_fontsize</item>
    </style>

</resources>
