<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="CustomTabLayoutTheme" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">25sp</item>
        <item name="android:listPreferredItemHeightSmall">50dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/navigationBackground</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--EventCardView styles-->
    <style name="EventTitle">
        <item name="android:background">@color/eventTitleBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EventData">
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="EventTime">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/eventTitleBackground</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <!--EventTextAppearances-->
    <style name="RegularTextStyle">
        <item name="android:textColor">@color/eventSpeakerColor</item>
        <item name="android:textSize">@dimen/event_data_font_size</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textColor">@color/eventTimeColor</item>
        <item name="android:textSize">@dimen/event_time_font_size</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/eventTitleColor</item>
        <item name="android:textSize">@dimen/event_title_font_size</item>
    </style>

    <!-- About Styles-->
    <style name="AboutIcons">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_about</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="AboutTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/aboutTitle</item>
        <item name="android:textSize">@dimen/about_title_font_size</item>
    </style>

    <style name="AboutTextStyle">
        <item name="android:textSize">@dimen/about_data_font_size</item>
    </style>

    <!-- Detail styles -->
    <style name="DetailTextStyle">
        <item name="android:textSize">@dimen/detail_data_font_size</item>
    </style>

    <style name="DetailTextStyle.Normal">
        <item name="android:textColor">@color/detailNormalText</item>
    </style>

    <style name="DetailTextStyle.Title">
        <item name="android:textColor">@color/detailTitleText</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">@dimen/detail_title_font_size</item>
    </style>

    <style name="DetailTextStyle.SpeakerTitle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/detailSpeakerTitle</item>
        <item name="android:textSize">@dimen/detail_title_font_size</item>
    </style>

    <style name="DetailTextStyle.Hyperlink">
        <item name="android:textColor">@color/detailHyperlinkText</item>
    </style>
</resources>
